#-----------------#
# COLOURS & FONTS
#-----------------#
set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $lightgray #bdae93
set $black #191919

default_border pixel 4
default_floating_border pixel 5
gaps inner 8

font pango:JetBrains Mono Nerd Font 10

#------------#
# WORKSPACES
#------------#
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
