//GLOBAL TWEAKS & VARIABLES
* {
    bg-col: #282828;
    //aqua: ${AQUA};
    aqua: #689d68;
    fg-col: #bdae93;
    grey: #a89984;
    black: #191919;

    width: 600;
    font: "Noto Serif Bold 16";
    border-radius: 10px;
    background-color: @bg-col;
}

element-text, element-icon , mode-switcher, button {
    background-color: inherit;
    text-color:       inherit;
    //horizontal-align: 0.5;
    cursor: pointer;
}


window {
    height: 580px;
	border-radius: 10px;
    padding: 5px;
}

inputbar, mainbox
{
    padding: 5px;
    margin: 5px;
}

// ============
//   INPUT BAR 
// ============

// WHOLE TOP SECTION
inputbar {
    children: [prompt,entry];
    //padding: 20px;
    //margin: 15px 0px 0px 15px;
}

// WHERE THE MODI NAME APPEARS
prompt {
    padding: 10px;
    background-color: @aqua;
    text-color: @bg-col;
    border-radius: 3px;
}

//WHERE THE TYPING HAPPENS
entry {
    padding: 6px;
    //margin: 20px 0px 20px 0px;
    border: 5px 10px 5px 10px;
    text-color: @fg-col;
    background-color: @black;
    cursor: text;
}



// ============
//   MAIN BOX
// ============

mainbox {
    background-color: @bg-col;
    //padding: 2px;
}

listview {
    //margin: 0px 20px 0px 20px;
    background-color: @black;
    spacing: 5px;
    columns: 1;
    fixed-columns: true;
    dynamic: false;
    lines: 10;
}

element {
    //border: 10px;
    padding: 6px;
    //spacing: 10px;
    background-color: @black;
    text-color: @fg-col  ;
    //orientation: vertical;
}

element-icon {
    size: 25px;
    padding: 3px;
}

element selected {
    background-color:  @fg-col ;
    text-color: @bg-col  ;
}

element-text {
    font: "Noto Serif Regular 14";
    vertical-align: 0.5;
}

textbox {
    padding: 0px;
    margin: 6px;
    text-color: @aqua;
    background-color: @black;
  }


// ==================
//   BOTTOM BUTTONS
// ==================
button {
    padding: 10px;
    border: 2px 5px 2px 5px;
    border-radius: 10px;
    background-color: @black;
    text-color: @grey;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
    background-color: @aqua;
    text-color: @bg-col;
}
